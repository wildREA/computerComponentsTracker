<Window x:Class="computerComponentsTracker.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:computerComponentsTracker"
        mc:Ignorable="d"
        Title="Computer Hardware Tracker" Height="475" Width="800"
        MinHeight="475" MinWidth="800"
        WindowStartupLocation="CenterScreen">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="0.2*"/>
        </Grid.ColumnDefinitions>
        <ContentControl x:Name="MainContent" Grid.Column="0"/>
        <Grid Grid.Column="1">
            <TextBlock TextWrapping="Wrap" Text="Your navigation panel goes here"/>
            <Button Content="Settings" Click="SettingsButton_Click" />
        </Grid>
    </Grid>
</Window>

<Window x:Class="computerComponentsTracker.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:computerComponentsTracker"
        mc:Ignorable="d"
        Title="Computer Hardware Tracker" Height="475" Width="800"
        MinHeight="475" MinWidth="800"
        WindowStartupLocation="CenterScreen">
    <Grid Grid.Column="0" Background="#f7f7f7">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="0.3*"/>
        </Grid.ColumnDefinitions>
        <ContentControl x:Name="MainContent" Grid.Column="0"/>
        <Grid Grid.Column="1">
            <Grid.RowDefinitions>
                <RowDefinition Height="0.3*"/>
                <RowDefinition Height="0.7*"/>
            </Grid.RowDefinitions>
            <Grid Grid.Row="0">
                <StackPanel VerticalAlignment="Center">
                    <TextBlock Text="Task Manager" Foreground="Black" HorizontalAlignment="Center" VerticalAlignment="Center" FontSize="20" FontWeight="Bold" Margin="0,10,0,0"/>
                    <TextBlock Text="2.0" Foreground="Black" HorizontalAlignment="Center" VerticalAlignment="Center" FontSize="20" FontWeight="Bold" Margin="0,10,0,0"/>
                </StackPanel>
            </Grid>
            <Grid Grid.Row="1">
                <StackPanel Margin="0,25,0,0">
                    <Button Content="Monitor" Background="Transparent" BorderThickness="0" HorizontalContentAlignment="Center" VerticalContentAlignment="Center" Click="MonitorButton_Click" Height="35" FontSize="16"/>
                    <Button Content="Settings" Background="Transparent" BorderThickness="0" HorizontalContentAlignment="Center" VerticalContentAlignment="Center" Click="SettingsButton_Click" Height="35" FontSize="16"/>
                </StackPanel>
            </Grid>
        </Grid>
    </Grid>
</Window>

<UserControl x:Class="computerComponentsTracker.Settings"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:local="clr-namespace:computerComponentsTracker"
             mc:Ignorable="d"
             d:DesignWidth="800"
             d:DesignHeight="450">
    <UserControl.Resources>
        <Style TargetType="{x:Type ComboBox}">
            <Setter Property="Background" Value="{DynamicResource ResourceKey=PanelBackground}" />
            <Setter Property="Foreground" Value="{DynamicResource ResourceKey=TextColor}"/>
        </Style>
        <Style TargetType="{x:Type ComboBoxItem}">
            <Setter Property="Background" Value="{DynamicResource ResourceKey=PanelBackground}" />
            <Setter Property="Foreground" Value="{DynamicResource ResourceKey=TextColor}"/>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="{DynamicResource ResourceKey=HoverColor}" />
                </Trigger>
                <Trigger Property="IsSelected" Value="True">
                    <Setter Property="Background" Value="{DynamicResource ResourceKey=PanelBackground}" />
                </Trigger>
            </Style.Triggers>
        </Style>
    </UserControl.Resources>
    <Grid Background="{DynamicResource ResourceKey=WindowBackground}" Margin="0,0,0,0">
        <StackPanel>
            <TextBlock Text="{DynamicResource SettingsTitle}" HorizontalAlignment="Center" VerticalAlignment="Top" FontSize="16" FontWeight="Bold" Margin="0,30,0,0"/>
            <TextBlock Text="{DynamicResource ChangeSettings}" HorizontalAlignment="Center" VerticalAlignment="Top" FontSize="14" Margin="0,0,0,0"/>
            <Line X1="0" Y1="0" X2="800" Y2="0" Stroke="Black" StrokeThickness="1" Margin="0,10,0,0" Width="500" HorizontalAlignment="Center"/>
            <TextBlock Text="{DynamicResource ChangeTheme}" HorizontalAlignment="Center" VerticalAlignment="Top" FontSize="14" Margin="0,20,0,0"/>
            <ComboBox x:Name="ThemeComboBox" SelectionChanged="themeChanged" HorizontalAlignment="Center" VerticalAlignment="Top" Margin="0,10,0,0" Width="200">
                <ComboBoxItem Tag="LightTheme" Content="{DynamicResource LightTheme}"/>
                <ComboBoxItem Tag="DarkTheme" Content="{DynamicResource DarkTheme}"/>
            </ComboBox>
            <TextBlock Text="{DynamicResource ChangeLanguage}" HorizontalAlignment="Center" VerticalAlignment="Top" FontSize="14" Margin="0,20,0,0"/>
            <ComboBox x:Name="LanguageComboBox" SelectionChanged="onLanguageChanged" HorizontalAlignment="Center" VerticalAlignment="Top" Margin="0,10,0,0" Width="200">
                <ComboBoxItem Tag="ar-SA" Content="{DynamicResource ArabicSaudiLanguage}"/>
                <ComboBoxItem Tag="ar-IQ" Content="{DynamicResource FarsiIraqLanguage}"/>
                <ComboBoxItem Tag="de-DE" Content="{DynamicResource GermanLanguage}"/>
                <ComboBoxItem Tag="el-GR" Content="{DynamicResource GreekLanguage}"/>
                <ComboBoxItem Tag="en-US" Content="{DynamicResource EnglishLanguage}"/>
                <ComboBoxItem Tag="fr-FR" Content="{DynamicResource FrenchLanguage}"/>
                <ComboBoxItem Tag="he-IL" Content="{DynamicResource HebrewLanguage}"/>
                <ComboBoxItem Tag="hi-IN" Content="{DynamicResource HindiLanguage}"/>
                <ComboBoxItem Tag="ko-KR" Content="{DynamicResource KoreanLanguage}"/>
                <ComboBoxItem Tag="it-IT" Content="{DynamicResource ItalianLanguage}"/>
                <ComboBoxItem Tag="ku-IQ" Content="{DynamicResource KurdishLanguage}"/>
                <ComboBoxItem Tag="lt-LT" Content="{DynamicResource LithuanianLanguage}"/>
                <ComboBoxItem Tag="nl-NL" Content="{DynamicResource DutchLanguage}"/>
                <ComboBoxItem Tag="jp-JP" Content="{DynamicResource JapaneseLanguage}"/>
                <ComboBoxItem Tag="pl-PL" Content="{DynamicResource PolishLanguage}"/>
                <ComboBoxItem Tag="pt-BR" Content="{DynamicResource PortugueseLanguage}"/>
                <ComboBoxItem Tag="ru-RU" Content="{DynamicResource RussianLanguage}"/>
                <ComboBoxItem Tag="th-TH" Content="{DynamicResource ThaiLanguage}"/>
                <ComboBoxItem Tag="tr-TR" Content="{DynamicResource TurkishLanguage}"/>
                <ComboBoxItem Tag="zh-CN" Content="{DynamicResource ChineseLanguage}"/>
                <ComboBoxItem Tag="ar-LB" Content="{DynamicResource LebaneseLanguage}"/>
            </ComboBox>
            <TextBlock Text="{DynamicResource ChangeNetworkAdapter}" HorizontalAlignment="Center" VerticalAlignment="Top" FontSize="14" Margin="0,20,0,0"/>
            <!-- REMOVE THIS OR CHANGE TO SOMETHING ELSE -->
            <ComboBox x:Name="NetworkInterfaceComboBox" HorizontalAlignment="Center" VerticalAlignment="Top" Margin="0,10,0,0" Width="200">
                <ComboBoxItem Content="{DynamicResource AutoNetwork}"/>
                <ComboBoxItem Content="{DynamicResource EthernetNetwork}"/>
                <ComboBoxItem Content="{DynamicResource WiFiNetwork}"/>
            </ComboBox>
            <TextBlock Text="{DynamicResource ChangeRefreshRate}" HorizontalAlignment="Center" VerticalAlignment="Top" FontSize="14" Margin="0,20,0,0"/>
            <ComboBox x:Name="RefreshRateComboBox" SelectionChanged="refreshRateChanged" HorizontalAlignment="Center" VerticalAlignment="Top" Margin="0,10,0,0" Width="200">
                <ComboBoxItem Content="{DynamicResource SecondRefreshRate}"/>
                <ComboBoxItem Content="{DynamicResource MillisecondRefreshRate}"/>
            </ComboBox>
            <Button Content="Apply" Click="ApplyButton_Click" Background="{DynamicResource ResourceKey=PanelBackground}" Foreground="{DynamicResource ResourceKey=TextColor}" BorderBrush="{DynamicResource ResourceKey=BorderBrush}" BorderThickness="1" HorizontalAlignment="Center" Margin="450,30,0,0" Width="70" Height="25" FontSize="14" HorizontalContentAlignment="Center" VerticalContentAlignment="Center"/>
        </StackPanel>
    </Grid>
</UserControl>